<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="far fa-calendar-alt"></i>
            <%= @event[:date] %>
        </h2>
        <h1><%= @event[:title] %></h1>
        <p><%= @event[:description] %></p> 
        <% for rsvp in @rsvps %>
            <div class="media">
                <% if rsvp[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= @users_table.where(id: rsvp[:user_id]).to_a[0][:name] %></h5>
                    <%= rsvp[:comments] %> 
                </div>
            </div>
            <% end %>
        <% for review in @reviews %>
            <div class="media">
                <% if review[:rate] == "10" %>
                <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
             <div class="media-body">
                    <h5 class="mt-0"><%= @users_table.where(id: review[:user_id]).to_a[0][:name] %></h5>
                    <%= review[:comments] %> 
                </div>
            </div>
            <% end %>

        <p class="mt-5">
            <% if @current_user %>
                <a href="/events/<%= @event[:id] %>/rsvps/new" class="btn btn-primary">RSVP now!</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to RSVP</a>
            <% end %>
        </p>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/events/<%= @event[:id] %>/review/new" class="btn btn-primary">Place review</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Sign in to add review</a>
            <% end %>
        </p>
        <p class="mt-5">
           <% @results = Geocoder.search(@event[:location]) %> 
            <% @lat_long = @results.first.coordinates %> 
            <% puts @lat_long %>
            <% @lat = @lat_long[0] %>
            <% @long = @lat_long[1] %>
                <iframe
                    width="400"
                    height="300"
                    frameborder="0" style="border:0"
                    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw&q=<%= @lat %>,<%=@long%>&zoom=14" allowfullscreen>
                </iframe>
        </p>        
    </div>
    <div class="col-sm-3">
        <h3>When?</h3>
        <p><%= @event[:date] %></p>
        <h3>Where?</h3>
        <p><%= @event[:location] %></p>
        <h3>How many guests so far?</h3>
        <p><%= @going_count %></p>
    </div>
</div>
